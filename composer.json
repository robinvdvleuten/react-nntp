{
    "name": "rvdv/react-nntp",
    "description": "Network News Transfer Protocol (NNTP) bindings for React.",
    "authors": [
        {
            "name": "Robin van der Vleuten",
            "email": "robinvdvleuten@gmail.com"
        }
    ],
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "react/react": "0.3.*@dev",
        "react/promise": "1.0.*@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-0": {
            "React\\Nntp": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
